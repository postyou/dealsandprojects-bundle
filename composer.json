{
    "name": "postyou/dealsandprojects-bundle",
    "type": "symfony-bundle",
    "description": "Deals & Projects API Client",
    "license": "MIT",
    "authors": [
        {
            "name": "Markus Nestmann",
            "homepage": "https://github.com/MarkejN"
        },
        {
            "name": "POSTYOU Digital- & Filmagentur",
            "homepage": "https://github.com/postyou"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/config": "^5.1",
        "symfony/dependency-injection": "^5.1",
        "symfony/http-kernel": "^5.1",
        "symfony/http-client": "^5.1",
        "symfony/framework-bundle": "^5.1",
        "knpuniversity/oauth2-client-bundle": "^2.8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.2",
        "vimeo/psalm": "^4.18",
        "psalm/plugin-symfony": "^3.1",
        "phpstan/phpstan": "^1.3",
        "phpstan/phpstan-symfony": "^1.0",
        "slam/phpstan-extensions": "^6.0",
        "thecodingmachine/phpstan-strict-rules": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Postyou\\DealsAndProjectsBundle\\": "src/"
        }
    },
    "scripts": {
        "cs": [
          "vendor/bin/php-cs-fixer fix -v --ansi"
        ],
        "psalm": [
            "vendor/bin/psalm --show-info=true"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyze --ansi"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
